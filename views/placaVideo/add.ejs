     <%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Novo Instrumento</h3>
      </header>
      <div class="content">
        <form id="form-placaVideo" autocomplete="off" action="/placaVideo/add/ok"  method="post">
          <div class="grid">
            <div>
              <label for="nome">Nome da placa</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: RTX 3090" required>
            </div>
            <div>
              <label for="marca">Marca</label>
              <select id="marca" name="marca" required>
                <option value="" disabled selected>Selecione a marca</option>
                <option>NVIDIA</option>
                <option>AMD</option>
          </select>

            </div>
                <div>
              <label for="condicao">Condição</label>
              <select id="condicao" name="condicao" required>
                <option value="" disabled selected>Selecione a condição</option>
                <option>Novo</option>
                <option>Usado - Excelente</option>
                <option>Usado - Bom</option>
              </select>
            </div>
            
            <div>
              <label for="preco">Preço (R$)</label>
              <input id="preco" name="preco" type="number" placeholder="0,00" min="0" step="0.01" required>
            </div>
            <div>
              <label for="ano">Ano de Fabricação</label>
              <input id="ano" name="ano" type="number" value="2024" min="1900" max="2099" required>
            </div>
            
          
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/instrumento/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Instrumento</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>